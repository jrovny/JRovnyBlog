@model JRovnyBlog.Models.PostSummary

<div class="card h-100">
    <img src="@Model.Image" alt="Blog post image" class="img-fluid">
    <div class="card-body">
        <h5 class="card-title">
            <a asp-page="/Posts/Index" asp-route-slug="@Model.Slug" class="card-link stretched-link fs-1">
                @Model.Title
            </a>
            <p class="card-text">
                <small class="text-muted">@Model.CreatedDate.ToShortDateString() &bull; Jordan</small>
            </p>
        </h5>
    </div>
</div>