@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="p-3 p-md-3 mb-4 text-white rounded bg-dark">
        <h1 class="display-4 fst-italic" style="text-align: center;">JRovny Blog</h1>
    </div>

    @* List of Blog Post Summaries *@
    <div class="container px-5-sm">
        @foreach (var post in Model.Posts)
        {
            <div class="card mb-3">
                <div class="row g-0">
                    <div class="col-6 col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-page="/Posts/Index" asp-route-slug="@post.Slug" class="card-link stretched-link">
                                    @post.Title
                                </a>
                            </h5>
                            <p class="card-text"><small class="text-muted">@post.CreatedDate.ToShortDateString() &bull;
                                    Jordan</small></p>
                        </div>
                    </div>
                    <div class="col-6 col-md-4 align-self-center">
                        <img src="@post.Image" alt="Blog post image" class="img-fluid">
                    </div>
                </div>
            </div>
        }
    </div>
</div>