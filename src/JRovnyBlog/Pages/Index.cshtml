@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="p-3 text-white rounded bg-dark">
    <h1 class="display-4 fst-italic" style="text-align: center;">JRovny Blog</h1>
</div>

<div class="container px-0">
    @* List of Blog Post Summaries *@
    <div class="row">
        <div class="col-0 col-md-2"></div>
        <div class="col-12 col-md-8">
            @foreach (var post in Model.Posts)
            {
                <div class="row">
                    <div class="col">
                        <partial name="PostSummary" model="@post"/>
                    </div>
                </div>
            }
        </div>
        <div class="col-0 col-md-2"></div>
    </div>
</div>