@page "{slug}"
@model JRovnyBlog.Pages.Posts.IndexModel
@{
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            <div>
                <div class="card border-primary mb-3">
                    <img src="@Model.Post.Image" class="card-img-top img-fluid" alt="Blog post image">
                    <div class="card-body">
                        <h5 class="card-title">@Model.Post.Title</h5>
                        <h6 class="card-subtitle text-muted">@Model.Post.CreatedDate.ToShortDateString() &bull; Jordan
                        </h6>
                        <div class="mt-3">@Model.PostContent</div>
                    </div>
                </div>
                <div class="card border-primary">
                    <div class="card-body">
                        <div id="disqus_thread"></div>
                    </div>
                </div>
                <script>
                    var disqus_config = function () {
                        this.page.url = "https://@Request.Host@Request.Path";
                        this.page.identifier = @Model.Post.PostId;
                    };
                    (function () { // DON'T EDIT BELOW THIS LINE
                        var d = document, s = d.createElement('script');
                        s.src = 'https://test2-jrovny-com.disqus.com/embed.js';
                        s.setAttribute('data-timestamp', +new Date());
                        (d.head || d.body).appendChild(s);
                    })();
                </script>
                <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments
                        powered by Disqus.</a></noscript>
            </div>
        </div>
        <div class="col-md-1"></div>
    </div>
</div>